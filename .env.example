# ===========================================
# Max Speed Web Scraper - Environment Config
# ===========================================

# ============ SEARCH APIs ============
# Serper.dev - Google Search API (2,500 free/month)
SERPER_API_KEY=

# Bing Web Search API (1,000 free/month)
BING_API_KEY=

# Brave Search API (2,000 free/month)
BRAVE_API_KEY=

# ============ PROXY SERVICES ============
# Bright Data (recommended for protected sites)
BRIGHT_DATA_USERNAME=
BRIGHT_DATA_PASSWORD=
BRIGHT_DATA_HOST=brd.superproxy.io
BRIGHT_DATA_PORT=22225

# ScraperAPI (alternative, 1,000 free/month)
SCRAPERAPI_KEY=

# ============ CAPTCHA SOLVING ============
# 2Captcha ($2.99 for 1000 solves)
TWOCAPTCHA_API_KEY=

# ============ DATABASE ============
# Supabase (500MB free tier)
SUPABASE_URL=
SUPABASE_KEY=

# ============ CACHE ============
# Redis (local or Redis Cloud free tier)
REDIS_URL=redis://localhost:6379

# ============ LLM ============
# Ollama runs locally - no API key needed
# Just install: https://ollama.ai
OLLAMA_HOST=http://localhost:11434

# ============ STORAGE ============
# For media files (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ============ SCRAPER CONFIG ============
# Maximum concurrent requests
MAX_CONCURRENCY=20

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Delay between requests (seconds)
REQUEST_DELAY=1.0

# Maximum retries per URL
MAX_RETRIES=3

# User agent rotation
ROTATE_USER_AGENT=true

# ============ LOGGING ============
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
